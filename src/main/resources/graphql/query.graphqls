type Query {
    item(id: ID!): Item
    items(itemFilter: ItemFilterInput): [Item!]!

    group(id: ID!): GroupItem
    groups(itemFilter: ItemFilterInput): [GroupItem!]!

    thing(id: ID!): Thing
    things(thingFilter: ThingFilterInput): [ThingInterface!]!

}

input ItemFilterInput {
    type: String
    tags: [String!]
    ids: [ID!]
}

input ThingFilterInput {
    ids: [ID!]
    typeId: ID
}

